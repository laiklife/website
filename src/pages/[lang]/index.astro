---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { t } from "../../i18n/i18n";
import { getLangPaths } from "../../i18n/routes";
import type { Lang } from "../../data/site";

export const getStaticPaths = () => getLangPaths();

import { SITE } from "../../data/site";
const lang = ((Astro.params?.lang as Lang) ?? SITE.defaultLang);
---

<BaseLayout lang={lang} title={t(lang, "nav.home")}>
  <section class="hero" data-reveal>
    <h1 class="h1">{t(lang, "home.title")}</h1>
    <p class="p">{t(lang, "home.subtitle")}</p>
    <div>
      <a class="btn" href={`/${lang}/gallery`}>{t(lang, "home.cta")} →</a>
    </div>
  </section>

  <section class="grid2" style="margin-top: 18px;">
    <div class="card col7 pad" data-reveal>
      <div style="padding:18px;">
        <h2 style="margin:0 0 8px; letter-spacing:-0.02em;">Selected work</h2>
        <p class="p">Add 3–6 highlight images here later (hero grid).</p>
      </div>
    </div>
    <div class="card col5 pad" data-reveal>
      <div style="padding:18px;">
        <h2 style="margin:0 0 8px; letter-spacing:-0.02em;">Fast contact</h2>
        <p class="p">We’ll connect this to the contact form.</p>
      </div>
    </div>
  </section>

  <style>
    [data-reveal]{ opacity:0; transform: translateY(10px); transition: opacity 600ms ease, transform 600ms ease; }
    .is-visible{ opacity:1; transform: translateY(0); }
  </style>
</BaseLayout>