---
import type { Lang } from "../data/site";
import { t } from "../i18n/i18n";
import { basePath } from "../i18n/routes";
import { SITE } from "../data/site";

const { lang } = Astro.props as { lang: Lang };
const year = new Date().getFullYear();
const base = basePath(lang);
---

<footer class="footer">
  <div class="container footer-inner">
    <div class="muted">
      Â© {year} {SITE.name}
    </div>

    <nav class="footer-links">
      <a href={`${base}/impressum/`} class="muted">
        {t(lang, "footer.imprint")}
      </a>

      {SITE.social.instagram && (
        <a
          href={SITE.social.instagram}
          target="_blank"
          rel="noopener noreferrer"
          class="icon-link"
          aria-label={t(lang, "footer.instagram")}
          title={t(lang, "footer.instagram")}
        >
          <!-- Instagram SVG Icon -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            width="18"
            height="18"
            aria-hidden="true"
          >
            <path
              fill="currentColor"
              d="M7.75 2h8.5C19.44 2 22 4.56 22 7.75v8.5C22 19.44 19.44 22 16.25 22h-8.5C4.56 22 2 19.44 2 16.25v-8.5C2 4.56 4.56 2 7.75 2Zm0 1.5C5.4 3.5 3.5 5.4 3.5 7.75v8.5c0 2.35 1.9 4.25 4.25 4.25h8.5c2.35 0 4.25-1.9 4.25-4.25v-8.5c0-2.35-1.9-4.25-4.25-4.25h-8.5Zm4.25 4a4.75 4.75 0 1 1 0 9.5 4.75 4.75 0 0 1 0-9.5Zm0 1.5a3.25 3.25 0 1 0 0 6.5 3.25 3.25 0 0 0 0-6.5Zm4.9-.9a1.1 1.1 0 1 1 0 2.2 1.1 1.1 0 0 1 0-2.2Z"
            />
          </svg>
        </a>
      )}
    </nav>
  </div>
</footer>